[include]
<PROJECT_ROOT>/src/js/.*
<PROJECT_ROOT>/flow-typed/.*


[ignore]
<PROJECT_ROOT>/dist/.*
.*/node_modules/.*/test/.*
.*/node_modules/styled-components/src/.*

[options]
# никаких пробелов до и после знака равно!!!!!
module.name_mapper='^types\/\(.*\)$' -> '<PROJECT_ROOT>/src/js/types/\1'
module.name_mapper='^helpers\/\(.*\)$' -> '<PROJECT_ROOT>/src/js/helpers/\1'
module.name_mapper='^client\/\(.*\)$' -> '<PROJECT_ROOT>/src/js/client/\1'
module.name_mapper='^server\/\(.*\)$' -> '<PROJECT_ROOT>/src/js/server/\1'


